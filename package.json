{
  "name": "@orao-network/zkvrf",
  "description": "ORAO zkVRF SDK library for Solidity",
  "version": "0.3.5",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "**/*.sol",
    "/dist",
    "!/mocks/**/*",
    "!**/.env"
  ],
  "scripts": {
    "build": "tsc",
    "test": "ts-mocha -p ./tsconfig.json -t 10000000 tests/**/*.ts",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.0",
    "chai": "^4.3.6",
    "dotenv": "^16.0.3",
    "mocha": "^10.1.0",
    "prettier": "^2.7.1",
    "ts-mocha": "^10.0.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bignumber": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "ethers": "^5.7.2"
  },
  "engines": {
    "node": ">=15.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/orao-network/zkvrf.git"
  },
  "keywords": [
    "solidity",
    "smart",
    "contracts",
    "zk",
    "VRF",
    "zkVRF",
    "zero-knowledge",
    "zero-knowledge VRF"
  ],
  "author": "ORAO Network Developers <hello@orao.network>",
